{
  "extends": "@pallas-ui/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@repo/ui/*": ["../../components/src/ui/*"],
      "content-collections": ["./.content-collections/generated"],
      "@/*": ["../../*"],
      "@/components/*": ["./components/*"],
      "~/*": ["./components/*"],
      "@pallas-ui/ui/*": ["../../components/src/*"],
      "@pallas-ui/panda-preset": ["../../packages/panda/src/index.ts"],
      "@pallas-ui/panda-preset/*": ["../../packages/panda/src/*"],
      "@pallas-ui/style-context": ["../../packages/style-context/src"],
      "@styled-system/*": ["./styled-system/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "next-env.d.ts", "next.config.mjs", ".next/types/**/*.ts", "plugins/rehype-component.js"],
  "exclude": ["node_modules"]
}
